<%= form_with(model: prospect) do |form| %>
  <% if prospect.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(prospect.errors.count, "error") %> no permitieron guardar tu inscripción:</h2>

      <ul>
        <% prospect.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nombre_partner, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email_partner, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :orbo_área, style: "display: block" %>
    <%= form.select :area, @areas, :prompt => "Selecciones una opción:"%>
  </div>

  <div>
    <%= form.label :url_del_logo, style: "display: block" %>
    <%= form.text_area :logo_url %>
  </div>

  <div>
    <%= form.label :página_web, style: "display: block" %>
    <%= form.text_field :web %>
  </div>

  <div>
    <%= form.label :facebook, style: "display: block" %>
    <%= form.text_field :fb %>
  </div>

  <div>
    <%= form.label :instagram, style: "display: block" %>
    <%= form.text_field :ig %>
  </div>

  <div>
    <%= form.label :descripción, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :dirección, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :ciudad, style: "display: block" %>
    <%= form.text_field :city %>
  </div>

  <div>
    <%= form.label :región, style: "display: block" %>
    <%= form.select :state, @regiones, :prompt => 'Seleccione una Región' %>
  </div>

  <div>
    <%= form.label :nombre_responsable, style: "display: block" %>
    <%= form.text_field :liason_name %>
  </div>

  <div>
    <%= form.label :teléfono_responsable, style: "display: block" %>
    <%= form.text_field :liason_phone %>
  </div>

  <div>
    <%= form.label :mail_responsable, style: "display: block" %>
    <%= form.text_field :liason_mail %>
  </div>
  
  <div>
    <%= form.label :estatus, style: "display: block" %>
    <%= form.select :status, @status, :prompt => 'Seleccione un Estatus' %>
  </div>
  
  <div>
    <%= form.label :Comentarios_internos, style: "display: block" %>
    <%= form.text_field :comments %>
  </div>

  <div>
    <br>
    <%= form.submit "Registrar la inscripción", class:"btn", id:"boton"%>
  </div>
<% end %>
