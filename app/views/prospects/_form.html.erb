<%= form_with(model: prospect) do |form| %>
  <% if prospect.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(prospect.errors.count, "error") %> no permitieron guardar tu inscripción:</h2>

      <ul>
        <% prospect.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<form class="ml-5 align-items-center" >
<div class="container-fluid" id="form_prospect">
  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :nombre_partner, style: "display: block", class:"col-form-label" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :email_partner, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :email, class:"form-control"  %>
  </div>
  
  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :teléfono, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :phone, class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :orbo_área, style: "display: block", class:"col-form-label"  %>
    <%= form.select :area, @areas, :prompt => "Selecciones una opción:", class:"form-control" %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :logo, style: "display: block", class:"col-form-label"  %>
    <%= form.file_field :logo, class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :página_web, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :web, class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :facebook, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :fb, class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :instagram, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :ig, class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :descripción, style: "display: block", class:"col-form-label"  %>
    <%= form.text_area :description, class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :dirección, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :address, class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :ciudad, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :city, class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :región, style: "display: block", class:"col-form-label"  %>
    <%= form.select :state, @regiones, :prompt => 'Seleccione una Región', class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :nombre_responsable, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :liason_name , class:"form-control" %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :teléfono_responsable, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :liason_phone, class:"form-control"  %>
  </div>

  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :mail_responsable, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :liason_mail, class:"form-control"  %>
  </div>
    
    
  <% if current_user.admin?%>
  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :estatus, style: "display: block", class:"col-form-label"  %>
    <%= form.select :status, @status, :prompt => 'Seleccione un Estatus', class:"form-control"  %>
  </div>
  
  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <%= form.label :Comentarios_internos, style: "display: block", class:"col-form-label"  %>
    <%= form.text_field :comments, class:"form-control"  %>
  </div>
  <% end %>
  <div class="col-9 col-lg-4 mb-3 ms-3 mt-3">
    <br>
    <%= form.submit "Registrar la inscripción", class:"btn", id:"boton"%>
  </div>
<% end %>

</div>
</form>
