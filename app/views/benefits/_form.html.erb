<%= form_with(model: benefit) do |form| %>
  <% if benefit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(benefit.errors.count, "errores") %> no permitieron que se registre este beneficio :</h2>

      <ul>
        <% benefit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :orbo_area, style: "display: block" %>
    <%= form.select :area, @areas, :prompt => "Selecciones una opción:"%>
  </div>

  <div>
    <%= form.label :fecha_inicio, style: "display: block" %>
    <%= form.date_field :date_start %>
  </div>

  <div>
    <%= form.label :fecha_término, style: "display: block" %>
    <%= form.date_field :date_end %>
  </div>

  <div>
    <%= form.label :ciudad, style: "display: block" %>
    <%= form.text_field :city %>
  </div>

  <div>
    <%= form.label :región, style: "display: block" %>
    <%= form.select :state, @regiones, :prompt => "Selecciones una opción:"%>
  </div>

  <div>
    <%= form.label :descripción, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :partner_id, style: "display: block" %>
    <%= form.collection_select :partner_id, Partner.order(:name),:id,:name, include_blank: true  %>
  </div>
  <br>
  <div>
    <%= form.submit "Registrar beneficio", class:"btn", id:"boton" %>
  </div>
<% end %>
