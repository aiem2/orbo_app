
<h2 class="titulo">Editar perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
        <%= f.label :Nombre_completo %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :nombre_usuario %><br />
        <%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name" %>
      </div>

      <div class="field">
        <%= f.label :mail %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :teléfono %><br />
        <%= f.text_field :phone, autocomplete: "phone" %>
      </div>
      
      <div class="field">
        <%= f.label :ciudad %><br />
        <%= f.text_field :city, autocomplete: "city" %>

      </div>
        <div class="field">
        <%= f.label :región %><br />
        <%= f.text_field :state, autocomplete: "state" %>
      </div>
      
      <div class="field">
        <%= f.label :fecha_de_nacimiento %><br />
        <%= f.date_field :dob, autocomplete: "dob" %>
      </div>

      <div class="field">
        <%= f.label :Género %><br />
        <%= f.select :gender, ['Masculino', 'Femenino', 'No binario', 'Prefiero no responder'] %>
      </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(Dejar en blanco si no se quiere cambiar)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres mínimo</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_actual %> <i>(necesitamos la clave actual para actualizar el perfil)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar perfil" %>
  </div>
<% end %>
<br>
<h3>Cancelar la cuenta</h3>

<%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro?" }, method: :delete %>
<br>
<%= link_to "Volver", :back %>
