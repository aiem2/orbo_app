<%= form_with(model: content) do |form| %>
  <% if content.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(content.errors.count, "error") %> no permitieron el registro de este Contenido:</h2>

      <ul>
        <% content.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<form class="ml-5 align-items-center" >
  <div class="container-fluid" id="form_prospect">  
      <div class="field col-9 col-lg-4 mb-3 ms-3 mt-3">
        <%= form.label :orbo_area, style: "display: block", class:"col-form-label" %>
        <%= form.select :area, @areas, :prompt => "Selecciones una opción:", class:"form-control"%>
      </div>

      <div class="field col-9 col-lg-4 mb-3 ms-3 mt-3">
        <%= form.label :logo, style: "display: block", class:"col-form-label" %>
        <%= form.file_field :logo, class:"form-control" %>
      </div>

      <div class="field col-9 col-lg-4 mb-3 ms-3 mt-3">
        <%= form.label :título, style: "display: block", class:"col-form-label" %>
        <%= form.text_field :title, class:"form-control" %>
      </div>

      <div class="field col-9 col-lg-4 mb-3 ms-3 mt-3">
        <%= form.label :fecha, style: "display: block" , class:"col-form-label"%>
        <%= form.date_field :date, class:"form-control" %>
      </div>

      <div class="field col-9 col-lg-4 mb-3 ms-3 mt-3">
        <%= form.label :descripción, style: "display: block", class:"col-form-label" %>
        <%= form.text_area :description, class:"form-control" %>
      </div>

      <div class="field col-9 col-lg-4 mb-3 ms-3 mt-3">
        <%= form.label :documento, style: "display: block", class:"col-form-label" %>
        <%= form.file_field :download, class:"form-control" %>
      </div>

      <div class="field col-9 col-lg-4 mb-3 ms-3 mt-3">
        <%= form.label :ciudad, style: "display: block" , class:"col-form-label"%>
        <%= form.text_field :city, class:"form-control" %>
      </div>

      <div class="field col-9 col-lg-4 mb-3 ms-3 mt-3">
        <%= form.label :región, style: "display: block" , class:"col-form-label"%>
        <%= form.select :state, @regiones, :prompt => 'Seleccione una Región', class:"form-control" %>
      </div>
      <br>
      <br>
      <div>
        <%= form.submit "Registrar contenido descargable", class:"btn", id:"boton" %>
      </div>
    <% end %>
  </div>
</form> 
